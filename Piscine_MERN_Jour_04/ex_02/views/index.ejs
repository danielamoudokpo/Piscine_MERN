crossorigin="anonymous">     
          
<link rel="stylesheet" type="text/css" href="style.css"> 
          
</head> 
<body> 
      
    <br> 
    <br> 
    <br> 
    <div class="container" > 
        <div class="row"> 
        <div class="col-md-3"> 
                      
        </div> 
                  
        <div class="col-md-6 main"> 
                      
            <form  method="post" action="/user/register"> 
                      
            <h1> Signup form </h1> 
                              
            <input class="box" type="text" name="login" id="name" 
            placeholder="Name"  required /><br> 
                              
            <input class="box" type="email" name="email" id="email" 
            placeholder="E-Mail" required /><br> 

            <input class="box" type="password" name="password" id="name" 
            placeholder="Enter password"  required /><br> 

            <input class="box" type="password" name="passwordConfirm" id="name" 
            placeholder="Confirm password"  required /><br> 

            <h3> <%= data  %> </h3>
                        <br> 
            <input class="btn btn-success"type="submit" id="submitDetails"  
            name="students" value="Submit" /><br> 
                      
            </form> 
                      
        </div> 
                               
        <div class="col-md-3"> 
        </div> 
                  
    </div> 
    </div> 
</body> 
</html>    